<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               app:cardCornerRadius="8dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="16dp"
               app:cardBackgroundColor="#FFE0B2"
               android:layout_marginRight="16dp"
               android:elevation="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <androidx.viewpager.widget.ViewPager
                       android:id="@+id/viewPager"
                       android:layout_marginLeft="2dp"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="2dp"
                       android:layout_marginRight="2dp"
                       android:layout_width="match_parent"
                       android:layout_height="300dp">
                   </androidx.viewpager.widget.ViewPager>
                   <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                       android:id="@+id/dots_indicator"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:dotsColor="@android:color/holo_blue_light"
                       app:dotsStrokeColor="@color/colorAccent"
                       app:dotsCornerRadius="8dp"
                       app:dotsSize="16dp"
                       android:layout_gravity="center"
                       app:dotsSpacing="4dp"
                       app:dotsStrokeWidth="2dp"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:elevation="5dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/textSmall"
                            android:fontFamily="@font/montserratb"
                            android:text="Electricity Bills"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/bill"
                            android:layout_width="0dp"
                            android:layout_weight="0.65"
                            android:text=""
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/textSmall"
                            android:fontFamily="@font/montserratb"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:text="Carbon Emission( CO2)"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/carbon"
                            android:layout_width="0dp"
                            android:layout_weight="0.65"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/textSmall"
                            android:fontFamily="@font/montserratb"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:text="Current Load "
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/load"
                            android:layout_width="0dp"
                            android:layout_weight="0.65"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/textSmall"
                            android:fontFamily="@font/montserratb"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:text="Electricity Consumption"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/consumption"
                            android:layout_width="0dp"
                            android:layout_weight="0.65"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/textSmall"
                            android:fontFamily="@font/montserratb"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:text="Current Meter Reading(KwH)"
                            android:layout_height="wrap_content" />
                        <TextView
                           android:id="@+id/reading"
                            android:layout_width="0dp"
                            android:layout_weight="0.650"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>



    
</LinearLayout>